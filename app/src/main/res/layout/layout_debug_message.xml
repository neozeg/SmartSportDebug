<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|top" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tx:"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="TxData"
                    android:textSize="12dp"
                    android:gravity="left|top"
                    android:id="@+id/tvTxMessage"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rx:"
                    android:textSize="12dp"
                    android:id="@+id/textView7"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/tvRxMessage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="left|top"
                    android:text="RxData"
                    android:textSize="12dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#000000" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="00"
                    android:id="@+id/tvMsg00"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="01"
                    android:id="@+id/tvMsg01"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="10"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvMsg10" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="11"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvMsg11" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="12"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvMsg12" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="20"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvMsg20" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="21"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvMsg21" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="22"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvMsg22" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="30"
                    android:id="@+id/tvMsg30"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="31"
                    android:id="@+id/tvMsg31"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="32"
                    android:id="@+id/tvMsg32"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DeviceID:"
                    android:id="@+id/tvMsg40"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Firmware ver.:"
                    android:id="@+id/tvMsg50"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Battary info:"
                    android:id="@+id/tvMsg60"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_frame01"
                    android:text="DEBUG"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:id="@+id/tvInfoDebug"
                    android:textSize="24dp"
                    android:textIsSelectable="false" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>