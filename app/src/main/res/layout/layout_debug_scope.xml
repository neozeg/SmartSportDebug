<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mupro.smartsportdebug.Views.WaveformView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/WaveformView1" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CH1"
            android:id="@+id/tvColorCh1"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CH2"
            android:id="@+id/tvColorCh2"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CH3"
            android:id="@+id/tvColorCh3"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CH4"
            android:id="@+id/tvColorCh4"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CH5"
            android:id="@+id/tvColorCh5"
            android:gravity="center"
            android:layout_weight="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CH6"
            android:id="@+id/tvColorCh6"
            android:gravity="center"
            android:layout_weight="1" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:id="@+id/buttonScopePress"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Attitude"
                android:id="@+id/buttonScopeRoll"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3Dsensor"
                android:id="@+id/buttonScope3d"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
</LinearLayout>