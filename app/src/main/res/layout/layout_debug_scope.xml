<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewWaveform"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mupro.smartsportdebug.Views.MyGLSurfView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/WaveformView1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH1"
                    android:textSize="12dp"
                    android:id="@+id/tvColorCh1"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH2"
                    android:textSize="12dp"
                    android:id="@+id/tvColorCh2"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH3"
                    android:textSize="12dp"
                    android:id="@+id/tvColorCh3"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH4"
                    android:textSize="12dp"
                    android:id="@+id/tvColorCh4"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH5"
                    android:textSize="12dp"
                    android:id="@+id/tvColorCh5"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH6"
                    android:textSize="12dp"
                    android:id="@+id/tvColorCh6"
                    android:gravity="center"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH1"
                    android:textSize="12dp"
                    android:id="@+id/tvMsgCh1"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH2"
                    android:textSize="12dp"
                    android:id="@+id/tvMsgCh2"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH3"
                    android:textSize="12dp"
                    android:id="@+id/tvMsgCh3"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH4"
                    android:textSize="12dp"
                    android:id="@+id/tvMsgCh4"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH5"
                    android:textSize="12dp"
                    android:id="@+id/tvMsgCh5"
                    android:gravity="center"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CH6"
                    android:textSize="12dp"
                    android:id="@+id/tvMsgCh6"
                    android:gravity="center"
                    android:layout_weight="1" />
            </TableRow>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:id="@+id/buttonScopePress"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Attitude"
                        android:id="@+id/buttonScopeRoll"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3Dsensor"
                        android:id="@+id/buttonScope3d"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="00"
                        android:id="@+id/tvMsgExt00"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="01"
                        android:id="@+id/tvMsgExt01"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="10"
                        android:id="@+id/tvMsgExt10"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="11"
                        android:id="@+id/tvMsgExt11"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="20"
                        android:id="@+id/tvMsgExt20"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="21"
                        android:id="@+id/tvMsgExt21"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="30"
                        android:id="@+id/tvMsgExt30"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/normal_frame01"
                        android:text="31"
                        android:id="@+id/tvMsgExt31"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>