<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserID:"
                        android:id="@+id/textView" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId0"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId1"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId2"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId3"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId4"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId5"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId6"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextUserId7"
                        android:maxLength="2"
                        android:digits="1234567890abcdefABCDEF "
                        android:layout_weight="1" />
                </LinearLayout>
            </HorizontalScrollView>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height(cm):"
                        android:id="@+id/textViewHeight" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextHeight"
                        android:digits="1234567890"
                        android:maxLength="5"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight(kg):"
                        android:id="@+id/textViewWeight" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextWeight"
                        android:digits="1234567890"
                        android:maxLength="3"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:text="UserInfo Read"
                        android:id="@+id/buttonUserInfoR"
                        android:layout_column="0" />

                    <Button
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:text="UserInfo Write"
                        android:id="@+id/buttonUserInfoW"
                        android:layout_column="2" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>